" --- Truecolor {{
set termguicolors
" --- Truecolor }}

source ~/.vimrc
 
" --- Terminal {{

" Easier normal mode (<C-\> twice)
tnoremap <C-\><C-\> <C-\><C-n>

" Split movement
tnoremap <C-h> <C-\><C-n><C-w>h
tnoremap <C-j> <C-\><C-n><C-w>j
tnoremap <C-k> <C-\><C-n><C-w>k
tnoremap <C-l> <C-\><C-n><C-w>l

" --- Terminal }}
